{
  "name": "odontogram",
  "version": "0.1.7",
  "description": "A lightweight, interactive web component odontogram built with Lit.",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": [
    "**/*.js",
    "**/*.ts"
  ],
  "peerDependencies": {
    "lit": "^3.0.0"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "odontogram",
    "react",
    "dental-chart"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/biomathcode/odontogram.git"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  },
  "type": "module",
  "scripts": {
    "dev": "pnpm run storybook",
    "build": "tsdown --format esm --format cjs",
    "build:check": "tsdown --publint",
    "build:vite": "tsc && vite build",
    "release": "pnpm build && pnpm release-it",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deploy-storybook": "gh-pages -d storybook-static",
    "test:coverage": "vitest run --coverage",
    "test": "vitest"
  },
  "dependencies": {
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.1",
    "@storybook/addon-a11y": "^10.2.13",
    "@storybook/addon-docs": "^10.2.13",
    "@storybook/addon-vitest": "^10.2.13",
    "@storybook/web-components-vite": "^10.2.13",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "gh-pages": "^6.3.0",
    "playwright": "^1.58.2",
    "publint": "^0.3.17",
    "release-it": "^19.2.4",
    "storybook": "^10.2.13",
    "tsdown": "0.21.0-beta.2",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  }
}
